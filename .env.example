# Environment Configuration Example
# Copy this file to .env and update with your actual values

# ============================================
# Server Configuration
# ============================================

# Port the server will listen on
PORT=3000

# Environment (development, staging, production)
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
# PostgreSQL (production-ready)
DATABASE_URL="postgresql://user:password@localhost:5432/api_todo"

# MySQL
# DATABASE_URL="mysql://user:password@localhost:3306/api_todo"

# SQLite (file-based, good for development)
# DATABASE_URL="file:./dev.db"

# ============================================
# JWT & Security
# ============================================

# Secret key for signing JWT tokens
# IMPORTANT: Change this in production to a random, secure string!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Bcrypt salt rounds (higher = more secure but slower)
# 10 = good for development
# 12+ = recommended for production
SALT_ROUND=10


#USER ROOT  
ROOT_EMAIL="super_user@gmail.com"

ROOT_PASS="superuser123"